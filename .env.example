# This is an example file. Copy this to .env and fill in your actual credentials.
# The .env file should be added to .gitignore to prevent committing sensitive data.

# Gemini API Key
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
TELEGRAM_CHAT_ID="YOUR_TELEGRAM_CHAT_ID" # Can be your user ID or a group/channel ID. Get this by sending /start to your bot.

# LinkedIn Credentials
LINKEDIN_EMAIL="your_linkedin_email@example.com"
LINKEDIN_PASSWORD="your_linkedin_password"

# Article Sources (true/false to enable/disable specific sources)
ENABLE_HACKERNEWS="true"
HACKERNEWS_MAX_ARTICLES="5" # Max articles to fetch from Hacker News per run

ENABLE_REDDIT_AI="true"
# For Reddit API (recommended for reliability):
# 1. Go to https://www.reddit.com/prefs/apps
# 2. Create a new app (select "script" type).
# 3. Set a redirect URI (e.g., http://localhost:8080 - it won't actually be used for this script type).
# 4. Note the client ID (under your app name) and client secret.
REDDIT_CLIENT_ID="YOUR_REDDIT_APP_CLIENT_ID"
REDDIT_CLIENT_SECRET="YOUR_REDDIT_APP_CLIENT_SECRET"
REDDIT_USER_AGENT="LinkedInAIAgent/0.1 by YourUsername" # Replace YourUsername or use default
REDDIT_AI_MAX_ARTICLES="5" # Max articles to fetch from Reddit r/artificialintelligence per run

ENABLE_TECHCRUNCH_AI="true"
TECHCRUNCH_AI_URL="https://techcrunch.com/category/artificial-intelligence/" # URL for TechCrunch AI section
TECHCRUNCH_MAX_ARTICLES="5" # Max articles to fetch from TechCrunch AI per run

ENABLE_ARXIV="false" # ArXiv can be very technical and sometimes noisy. Enable with caution.
ARXIV_SEARCH_QUERY="cat:cs.AI OR cat:cs.LG OR cat:stat.ML" # ArXiv categories for AI/ML/LG
ARXIV_MAX_ARTICLES="3" # Max articles to fetch from ArXiv per run

# LLM Settings
LLM_MODEL_NAME="gemini-pro" # Which Gemini model to use for summarization
SUMMARIZATION_PROMPT="Please provide a concise and engaging summary of the following article, suitable for a LinkedIn post. Highlight key insights and implications. The summary should be around 2-3 sentences. Article content: "

# LinkedIn Posting Settings
LINKEDIN_POST_PREFIX="Check out this insightful AI article:" # Text to prepend to the LinkedIn post
LINKEDIN_POST_SUFFIX="#AI #ArtificialIntelligence #TechTrends #Innovation #LLM" # Hashtags or text to append

# General Settings
REQUEST_TIMEOUT="15" # Timeout in seconds for HTTP requests (fetching articles, etc.)
MAX_RETRIES="3"      # Max number of retries for failed HTTP requests or LLM calls
RETRY_DELAY="5"      # Delay in seconds between retries

# Logging Configuration
LOG_LEVEL="INFO" # Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_FILE_PATH="app.log" # Optional: Path to a standard text log file
# LOG_JSON_FILE_PATH="app.log.json" # Optional: Path to a JSON formatted log file
